@model IEnumerable<netmvc.Models.ContactForm>

@{
    ViewData["Title"] = "Submissions";
    var searchQuery = ViewData["SearchQuery"] as string; // Retrieve the search query from ViewData
}

<h1>Submitted Contact Forms</h1>
<p>Below are all the submissions from the contact form. You can search by name to filter the submissions.</p>

<!-- Search form to filter by name -->
<form method="get" action="@Url.Action("Submissions", "Contact")">
    <label for="search">Search by Name:</label> <!-- Corrected 'for' -->
    <input type="text" id="search" name="searchName" value="@searchQuery" /> <!-- Corrected 'name' to 'searchName' -->
    <button type="submit">Search</button>
</form>

<br />

<!-- Table displaying the submissions -->
<table border="1">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Message</th>
            <th>Age</th>
            <th>Contact Number</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var submission in Model)
            {
                <tr>
                    <td>@submission.Name</td>
                    <td>@submission.EmailAddress</td>
                    <td>@submission.Message</td>
                    <td>@submission.Age</td>
                    <td>@submission.ContactNumber</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No submissions found.</td>
            </tr>
        }
    </tbody>
</table>
